IF & ELSE 

#include <iostream>

using namespace std;

int main()
{
    int x,y;
    
    cout<<"Enter the 2 nos";
    cin>>x>>y;
    if(x>y)
    {
        cout<<"max is"<<x;
    }
    else
    {
       cout<<"max is"<<y;
}
    return 0;
}

POSITIVE OR NEGATIVE

#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout<<"Enter the  no";
    cin>>x;
    
    if(x>0)
    {
        cout<<"positive is"<<x;
    }
    else
    {
       cout<<"negative is"<<x;
}
    return 0;
}

EVEN OR ODD

#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout<<"Enter the  no";
    cin>>x;
    
    if(x%2==0)
    {
        cout<<"Even is"<<x;
    }
    else
    {
       cout<<"Odd is"<<x;
}
    return 0;
}

HOUR

#include <iostream>

using namespace std;

int main()
{
    int hour;
    
    cout<<"Enter the  horu";
    cin>>hour;
    
    if(hour>=9 && hour<=18)
    {
        cout<<"working"<<endl;
    }
    else
    {
       cout<<"liesure"<<endl;
}
    return 0;
}

AGE 

#include <iostream>

using namespace std;

int main()
{
    int age;
    
    cout<<"Enter age  ";
    cin>>age;
    
    if(age>12 && age<50)
    {
        cout<<"young"<<endl;
    }
    else
    {
       cout<<"not young"<<endl;
}
    return 0;
}

ELIGIBLE OR NOT

#include <iostream>

using namespace std;

int main()
{
    int age;
    
    cout<<"Enter age  ";
    cin>>age;
    
    if(age<12 || age>50)
    {
        cout<<"eligible"<<endl;
    }
    else
    {
       cout<<"not eligible"<<endl;
}
    return 0;
}

MAXIMUM OF 3 NUMBERS

#include <iostream>

using namespace std;

int main()
{
    int a,b,c;
    
    cout<<"Enter 3 nos ";
    cin>>a>>b>>c;
    
    if(a>b && a>c)
    {
        cout<<"a"<<endl;
    }
    else 
    if(b>c)
    {
       cout<<"b"<<endl;
    }
       else
       {
       cout<<"c"<<endl;
}

    return 0;
}

NATURE OF QUADRATIC EQUATION

#include<math.h>
#include <iostream>

using namespace std;

int main()
{
    float d,a,b,c,r1,r2;
    
    cout<<"Enter values  ";
    cin>>a>>b>>c;
    d=b*b-4*a*c;
    
    if(d==0)
    {   
        r1=r2=(-b/2*a);
        cout<<"real and equal"<<endl;
        cout<<r1<<" "<<r2<<endl;
    }

    if(d>0)
    {
        r1=(-b+sqrt(d))/(2*a);
        r2=(-b-sqrt(d))/(2*a);
       cout<<"real and unequal"<<endl;
       cout<<r1<< " "<<r2<<endl;
       
    }
       
       if(d<0)
       {
       cout<<"imaginary"<<endl;
      
}

    return 0;
}
