IF & ELSE 

#include <iostream>

using namespace std;

int main()
{
    int x,y;
    
    cout<<"Enter the 2 nos";
    cin>>x>>y;
    if(x>y)
    {
        cout<<"max is"<<x;
    }
    else
    {
       cout<<"max is"<<y;
}
    return 0;
}

POSITIVE OR NEGATIVE

#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout<<"Enter the  no";
    cin>>x;
    
    if(x>0)
    {
        cout<<"positive is"<<x;
    }
    else
    {
       cout<<"negative is"<<x;
}
    return 0;
}

EVEN OR ODD

#include <iostream>

using namespace std;

int main()
{
    int x;
    
    cout<<"Enter the  no";
    cin>>x;
    
    if(x%2==0)
    {
        cout<<"Even is"<<x;
    }
    else
    {
       cout<<"Odd is"<<x;
}
    return 0;
}

