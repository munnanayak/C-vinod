
Basic

#include <iostream>

using namespace std;

int main()
{
    int x=10,y=0,z;
    
    try
    {
        if(y==0)
        throw 1;
        z=x/y;
        cout<<z<<endl;
    }
         catch(int e)
         {
             
           cout<<"division by zero is "<<e<<endl;  
             
         }
    
}

#include <iostream>

using namespace std;

   int division (int a,int b)
    {
        if(b==0)
     throw 1;
     return a/b;
    }
int main()
{
    int x=10,y=2,z;
    
    try
    {
        
        z=division(x,y);
        cout<<z<<endl;
    }
         catch(int e)
         {
             
           cout<<"division by zero is "<<e<<endl;  
             
         }
    cout<<"bye"<<endl;
}


#include <iostream>

using namespace std;
int main()
{
    try
    {
        throw 1 ;
        
    }
    catch(int e)
    {
        cout<<"Int Catch"<<endl;
    }
    catch(double e)
    {
        cout<<"Double catch"<<endl;
    }
    catch(...)
    {
        cout<<"All Catch"<<endl;
    }
}

