sum od digits

#include <iostream>

using namespace std;

int main()
{ 
    int sum=0;
    int A[]={4,8,6,9,5,2,7};
    int n=7;
    for(int i=0;i<7;i++)
    {
        sum=sum+A[i]; 
    }
    cout<<"sum of digits is:  "<<sum<<endl;

    return 0;
}

MAX OF ALL DIGITS

#include <iostream>

using namespace std;

int main()
{ 
    
    int A[]={4,8,6,9,5,2,7}, max=A[0];
    
    for(auto x:A)
    {
        if(x>max)
        {
            max=x;
        }
        cout<<"max of value is :"<<max<<endl;
    
    }
    return 0;
}
