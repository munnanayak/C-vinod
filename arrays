sum od digits

#include <iostream>

using namespace std;

int main()
{ 
    int sum=0;
    int A[]={4,8,6,9,5,2,7};
    int n=7;
    for(int i=0;i<7;i++)
    {
        sum=sum+A[i]; 
    }
    cout<<"sum of digits is:  "<<sum<<endl;

    return 0;
}

MAX OF ALL DIGITS

#include <iostream>

using namespace std;

int main()
{ 
    
    int A[]={4,8,6,9,5,2,7}, max=A[0];
    
    for(auto x:A)
    {
        if(x>max)
        {
            max=x;
        }
        cout<<"max of value is :"<<max<<endl;
    
    }
    return 0;
}

V PATARN 

#include <iostream>

using namespace std;

int main()
{
    
    for(int i=0;i<4;i++)
    {
        for(int j=0;j<10;j++)
        {
            if(j>=i+1 && j<10-(i+1))
            
              cout<<" ";
            else 
              cout<<"*";
          
       }
    cout<<"\n";
    }

    

    return 0;
}

ADDING MATRICS

#include <iostream>

using namespace std;

int main()
{
    int i,j;
    int A[2][3]={2,5,9,6,9,15};
    int B[2][3]={3,4,5,5,6,7};
    int C[2][3];
    
           for(int i=0;i<2;i++)
    {
           for(int j=0;j<3;j++)
        {
        
            C[i][j]=A[i][j]+B[i][j];
        }
    }
    
         for(int i=0;i<2;i++)
    {   
            for(int j=0;j<3;j++) 
        {
          cout<<C[i][j]<<" ";  
        }
         cout<<endl;
    }

    return 0;
}

