class complex(operator overloading)


#include <iostream>

using namespace std;

  class Complex
{
 public:
         int real;
         int img;
         
         
 /*public:
        complex(int c=0;int i=0)
    {
        real=r;
        img=i;
    }  */  
    
 Complex operator+(Complex c)  
    {
        Complex temp;
        temp.real =real+c.real;
        temp.img = img+c.img;
        return temp;
    }
};
    
      int main()
    {
        Complex c1,c2,c3;
        c1.real=5;c1.img=7;
        c2.real=4;c2.img=6;
        c3=c1+c2;
        cout<<c3.real<<"+"<<c3.img<<"i"<<endl;
        return 0;

    }
